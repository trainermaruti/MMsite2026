# Environment Variables for Docker Deployment
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env FILE TO GIT!

# Admin Credentials
ASPNETCORE_Admin__Email=admin@marutitraining.com
ASPNETCORE_Admin__Password=CHANGE_THIS_SecurePassword123!

# Database Connection (SQLite for simplicity)
ConnectionStrings__DefaultConnection=Data Source=/app/data/MarutiTrainingPortal.db

# Or use SQL Server:
# ConnectionStrings__DefaultConnection=Server=sql_server;Database=MarutiTraining;User=sa;Password=YourDbPassword123!;TrustServerCertificate=True;

# Email Settings (Optional - for contact form notifications)
ASPNETCORE_Email__SmtpServer=smtp.gmail.com
ASPNETCORE_Email__SmtpPort=587
ASPNETCORE_Email__SenderEmail=your-email@gmail.com
ASPNETCORE_Email__Username=your-email@gmail.com
ASPNETCORE_Email__Password=your-app-password

# Application Insights (Optional - for production monitoring)
ASPNETCORE_ApplicationInsights__InstrumentationKey=your-instrumentation-key
