@inject IImageService ImageService
@* HERO SECTION - Maruti Makwana Corporate Azure & AI Trainer *@

<section class="hero-section-modern" style="position: relative; min-height: 100vh; display: flex; align-items: center; background: #000000; overflow: hidden;">
    
    @* Radial Spotlight Glow *@
    <div style="position: absolute; inset: 0; background: 
        radial-gradient(circle at 30% 50%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 70% 50%, rgba(168, 85, 247, 0.1) 0%, transparent 50%);"></div>
    
    <div class="container" style="position: relative; z-index: 10;">
        <div class="row align-items-center" style="min-height: 80vh;">
            
            @* LEFT COLUMN - CONTENT *@
            <div class="col-lg-6 col-md-12" style="padding: 40px 20px;">
                
                @* Eyebrow Badge *@
                <div style="display: inline-flex; align-items: center; gap: 8px; padding: 6px 16px; background: rgba(59, 130, 246, 0.1); border: 1px solid rgba(59, 130, 246, 0.2); border-radius: 50px; margin-bottom: 24px;">
                    <div style="width: 8px; height: 8px; background: #001f3f; border-radius: 50%; animation: pulse 2s infinite;"></div>
                    <span style="color: #003366; font-size: 14px; font-weight: 600; letter-spacing: 0.5px;">Available for Corporate Training</span>
                </div>
                
                @* Main Headline with Gradient *@
                <h1 style="font-size: clamp(48px, 8vw, 72px); font-weight: 800; line-height: 1.1; margin-bottom: 16px; background: linear-gradient(135deg, #ffffff 0%, #003366 50%, #a855f7 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                    Maruti Makwana
                </h1>
                
                @* Professional Title *@
                <h2 style="font-size: clamp(24px, 4vw, 36px); font-weight: 700; color: #ffffff; margin-bottom: 12px; line-height: 1.3;">
                    Corporate Azure & AI Trainer
                </h2>
                
                @* Value Proposition *@
                <p style="font-size: 18px; color: #a3a3a3; line-height: 1.7; margin-bottom: 32px; max-width: 560px;">
                    Helping enterprises modernize with <span style="color: #003366; font-weight: 600;">Microsoft Azure</span>, <span style="color: #a855f7; font-weight: 600;">Artificial Intelligence</span>, and cloud-native technologies. Over <strong style="color: #ffffff;">3000+ professionals trained</strong> across 30+ companies.
                </p>
                
                @* CTA Buttons *@
                <div style="display: flex; gap: 16px; flex-wrap: wrap; margin-bottom: 48px;">
                    <a href="/Contact" style="display: inline-flex; align-items: center; gap: 10px; padding: 16px 32px; background: linear-gradient(135deg, #001f3f 0%, #003366 100%); color: #ffffff; font-size: 16px; font-weight: 600; border-radius: 12px; text-decoration: none; box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4), 0 0 24px rgba(59, 130, 246, 0.2); transition: all 0.3s ease; border: none;">
                        <i class="fas fa-calendar-check"></i>
                        <span>Book Training</span>
                    </a>
                    <a href="/Courses" style="display: inline-flex; align-items: center; gap: 10px; padding: 16px 32px; background: rgba(255, 255, 255, 0.05); color: #ffffff; font-size: 16px; font-weight: 600; border-radius: 12px; text-decoration: none; border: 1px solid rgba(156, 163, 175, 0.3); backdrop-filter: blur(8px); transition: all 0.3s ease;">
                        <i class="fas fa-video"></i>
                        <span>View Courses</span>
                    </a>
                </div>
                
                @* Trust Indicators *@
                <div style="display: flex; gap: 32px; flex-wrap: wrap; padding-top: 24px; border-top: 1px solid rgba(156, 163, 175, 0.2);">
                    <div>
                        <div style="font-size: 32px; font-weight: 700; color: #003366; margin-bottom: 4px;">3000+</div>
                        <div style="font-size: 14px; color: #a3a3a3;">Professionals Trained</div>
                    </div>
                    <div>
                        <div style="font-size: 32px; font-weight: 700; color: #a855f7; margin-bottom: 4px;">30+</div>
                        <div style="font-size: 14px; color: #a3a3a3;">Companies</div>
                    </div>
                    <div>
                        <div style="font-size: 32px; font-weight: 700; color: #001f3f; margin-bottom: 4px;">50+</div>
                        <div style="font-size: 14px; color: #a3a3a3;">Training Programs</div>
                    </div>
                </div>
                
            </div>
            
            @* RIGHT COLUMN - PROFILE IMAGE *@
            <div class="col-lg-6 col-md-12" style="display: flex; justify-content: center; align-items: center; padding: 40px 20px;">
                
                <div class="hero-image-container" style="position: relative; width: 100%; max-width: 500px;">
                    
                    @* Glow Background Effect *@
                    <div style="position: absolute; inset: -40px; background: linear-gradient(135deg, rgba(168, 85, 247, 0.3) 0%, rgba(59, 130, 246, 0.3) 100%); border-radius: 50%; filter: blur(60px); opacity: 0.6; animation: float 6s ease-in-out infinite;"></div>
                    
                    @* Profile Image with Gradient Fade *@
                    <div style="position: relative; z-index: 2;">
                        <img src="@await ImageService.GetImageUrlAsync("home_profile_photo")" alt="Maruti Makwana - Azure & AI Trainer" 
                             style="width: 100%; height: auto; border-radius: 24px; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5), 0 0 80px rgba(59, 130, 246, 0.3); 
                             mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 70%, rgba(0,0,0,0) 100%);
                             -webkit-mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 70%, rgba(0,0,0,0) 100%);" />
                    </div>
                    
                    @* Floating Badge *@
                    <div style="position: absolute; bottom: 40px; right: -20px; background: rgba(10, 10, 10, 0.9); backdrop-filter: blur(12px); padding: 16px 20px; border-radius: 16px; border: 1px solid rgba(0, 51, 102, $1); box-shadow: 0 8px 24px rgba(0, 0, 0, 0.6);">
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <div style="width: 12px; height: 12px; background: #001f3f; border-radius: 50%; box-shadow: 0 0 12px #001f3f;"></div>
                            <div>
                                <div style="font-size: 12px; color: #a3a3a3; margin-bottom: 2px;">Microsoft Certified</div>
                                <div style="font-size: 16px; font-weight: 700; color: #ffffff;">Azure Expert</div>
                            </div>
                        </div>
                    </div>
                    
                </div>
                
            </div>
            
        </div>
    </div>
    
</section>

<style>
@@keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
}

@@keyframes float {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
}

.hero-section-modern a:hover {
    transform: translateY(-2px);
}

.hero-section-modern a:first-child:hover {
    box-shadow: 0 6px 24px rgba(59, 130, 246, 0.6), 0 0 40px rgba(59, 130, 246, 0.3);
}

.hero-section-modern a:last-child:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(0, 51, 102, $1);
}

@@media (max-width: 991px) {
    .hero-image-container {
        max-width: 400px;
        margin-top: 40px;
    }
}
</style>
