@{
    ViewData["Title"] = "Training Calendar";
}

<!-- FullCalendar CSS -->
<link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css' rel='stylesheet' />

<div class="container mt-5 mb-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="gradient-text">Training Events Calendar</h1>
            <p class="text-muted">View upcoming training sessions, workshops, and webinars. Click on an event to register your interest.</p>
        </div>
    </div>

    <!-- Calendar Container -->
    <div class="card-enterprise">
        <div id="calendar"></div>
    </div>

    <!-- Legend -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card-enterprise" style="padding: 20px;">
                <h5>Event Types</h5>
                <div style="display: flex; gap: 20px; flex-wrap: wrap; margin-top: 15px;">
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <div style="width: 20px; height: 20px; background: #001f3f; border-radius: 4px;"></div>
                        <span>Webinar</span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <div style="width: 20px; height: 20px; background: #003366; border-radius: 4px;"></div>
                        <span>Workshop</span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <div style="width: 20px; height: 20px; background: #ec4899; border-radius: 4px;"></div>
                        <span>Bootcamp</span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <div style="width: 20px; height: 20px; background: #001f3f; border-radius: 4px;"></div>
                        <span>Conference</span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <div style="width: 20px; height: 20px; background: #001f3f; border-radius: 4px;"></div>
                        <span>Training</span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <div style="width: 20px; height: 20px; background: #001f3f; border-radius: 4px;"></div>
                        <span>Certification</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Register Interest Modal -->
<div class="modal fade" id="registerInterestModal" tabindex="-1" aria-labelledby="registerInterestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: var(--color-bg-slate); border: 1px solid rgba(0, 31, 63, $1); border-radius: 12px;">
            <div class="modal-header" style="border-bottom: 1px solid rgba(0, 31, 63, $1);">
                <h5 class="modal-title" id="registerInterestModalLabel" style="color: var(--color-text-primary);">Register Your Interest</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="eventDetailsDisplay" class="mb-4">
                    <!-- Event details will be populated here -->
                </div>

                <form id="registerInterestForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="eventIdInput" name="eventId" />
                    
                    <div class="mb-3">
                        <label for="nameInput" class="form-label" style="color: var(--color-text-primary);">Your Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control-modern" id="nameInput" name="name" autocomplete="name" required aria-describedby="name-error">
                        <span id="name-error" class="text-danger" role="alert"></span>
                    </div>

                    <div class="mb-3">
                        <label for="emailInput" class="form-label" style="color: var(--color-text-primary);">Email Address <span class="text-danger">*</span></label>
                        <input type="email" class="form-control-modern" id="emailInput" name="email" autocomplete="email" required aria-describedby="email-error">
                        <span id="email-error" class="text-danger" role="alert"></span>
                    </div>

                    <div class="mb-3">
                        <label for="phoneInput" class="form-label" style="color: var(--color-text-primary);">Phone Number</label>
                        <input type="tel" class="form-control-modern" id="phoneInput" name="phone" autocomplete="tel">
                    </div>

                    <div class="mb-3">
                        <label for="messageInput" class="form-label" style="color: var(--color-text-primary);">Message (Optional)</label>
                        <textarea class="form-control-modern" id="messageInput" name="message" rows="3" autocomplete="off" placeholder="Any questions or special requirements?"></textarea>
                    </div>

                    <div class="alert alert-enterprise-info" style="background: rgba(0, 31, 63, $1); border: 1px solid rgba(0, 31, 63, $1); color: var(--color-text-primary); border-radius: 8px; padding: 12px;">
                        <i class="fas fa-info-circle"></i> We'll contact you with event details and registration instructions.
                    </div>

                    <div id="formMessage" class="alert" style="display: none;"></div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn-enterprise" id="submitBtn">
                            <i class="fas fa-paper-plane"></i> Submit Interest
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- FullCalendar JS -->
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var calendarEl = document.getElementById('calendar');
    var registerModal = new bootstrap.Modal(document.getElementById('registerInterestModal'));
    var currentEventId = null;

    var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,listMonth'
        },
        height: 'auto',
        themeSystem: 'bootstrap5',
        events: '/api/events/calendar',
        eventClick: function(info) {
            info.jsEvent.preventDefault();
            
            // Fetch event details
            currentEventId = info.event.id;
            document.getElementById('eventIdInput').value = currentEventId;
            
            // Display event details in modal
            var eventDetails = `
                <div class="card-enterprise" style="padding: 16px; margin-bottom: 0;">
                    <h5 style="color: var(--color-primary); margin-bottom: 12px;">${info.event.title}</h5>
                    <p style="color: var(--color-text-secondary); margin-bottom: 8px;">
                        <i class="fas fa-calendar"></i> 
                        ${new Date(info.event.start).toLocaleDateString('en-US', { 
                            weekday: 'long', 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                        })}
                    </p>
                    <p style="color: var(--color-text-secondary); margin-bottom: 8px;">
                        <i class="fas fa-map-marker-alt"></i> ${info.event.extendedProps.location || 'TBA'}
                    </p>
                    <p style="color: var(--color-text-secondary); margin-bottom: 0;">
                        <i class="fas fa-tag"></i> ${info.event.extendedProps.eventType || 'Event'}
                    </p>
                    ${info.event.extendedProps.isFull ? 
                        '<div class="badge bg-danger mt-2">Event Full</div>' : 
                        '<div class="badge bg-success mt-2">Seats Available</div>'}
                </div>
            `;
            
            document.getElementById('eventDetailsDisplay').innerHTML = eventDetails;
            registerModal.show();
        },
        eventDidMount: function(info) {
            // Add tooltip
            info.el.title = info.event.extendedProps.description || info.event.title;
        }
    });

    calendar.render();

    // Handle form submission
    document.getElementById('registerInterestForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        var submitBtn = document.getElementById('submitBtn');
        var formMessage = document.getElementById('formMessage');
        
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting...';
        
        var formData = {
            name: document.getElementById('nameInput').value,
            email: document.getElementById('emailInput').value,
            phone: document.getElementById('phoneInput').value,
            message: document.getElementById('messageInput').value,
            eventId: parseInt(document.getElementById('eventIdInput').value)
        };

        try {
            const response = await fetch('/Contact', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify(formData)
            });

            if (response.ok) {
                formMessage.className = 'alert alert-success';
                formMessage.style.display = 'block';
                formMessage.textContent = 'Thank you! We\'ve received your interest and will contact you soon.';
                
                // Reset form
                document.getElementById('registerInterestForm').reset();
                
                // Close modal after 2 seconds
                setTimeout(() => {
                    registerModal.hide();
                    formMessage.style.display = 'none';
                }, 2000);
            } else {
                throw new Error('Submission failed');
            }
        } catch (error) {
            formMessage.className = 'alert alert-danger';
            formMessage.style.display = 'block';
            formMessage.textContent = 'Failed to submit. Please try again or contact us directly.';
        } finally {
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Submit Interest';
        }
    });

    // Reset form when modal is closed
    document.getElementById('registerInterestModal').addEventListener('hidden.bs.modal', function() {
        document.getElementById('registerInterestForm').reset();
        document.getElementById('formMessage').style.display = 'none';
    });
});
</script>

