@model List<Course>

@{
    ViewData["Title"] = "Azure Cloud & AI Video Courses | Maruti Makwana (MCT)";
    ViewData["Description"] = "Master Microsoft Azure and AI with self-paced video courses by Microsoft Certified Trainer (MCT) Maruti Makwana. Hands-on recordings for AZ-104, AI-900, AI-102, and more.";
    ViewData["Keywords"] = "Azure video courses, AI training videos, Microsoft Certified Trainer, MCT, AZ-104 recordings, AI-900 workshops, Maruti Makwana courses, SkillTech Club training, cloud certification videos";
}

@if (Model != null && Model.Any())
{
    <!-- Structured Data for Courses (GEO/AI Optimization) -->
    <script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "ItemList",
      "itemListElement": [
        @for (int i = 0; i < Model.Count; i++)
        {
            var course = Model[i];
            <text>
            {
              "@@type": "ListItem",
              "position": @(i + 1),
              "item": {
                "@@type": "Course",
                "name": "@Html.Raw(course.Title)",
                "description": "@Html.Raw(course.Description)",
                "provider": {
                  "@@type": "Person",
                  "name": "Maruti Makwana",
                  "sameAs": "https://marutimakwana.com"
                }
              }
            }@(i < Model.Count - 1 ? "," : "")
            </text>
        }
      ]
    }
    </script>
}

<div class="container mt-5 mb-5">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <h1>Azure Cloud & AI Courses</h1>
            <p class="text-muted">Self-paced learning with recorded video workshops by **Microsoft Certified Trainer (MCT)** Maruti Makwana.</p>
        </div>
    </div>



    @if (Model == null || Model.Count == 0)
    {
        <div class="text-center py-5">
            <i class="fas fa-video fa-3x mb-3" style="opacity: 0.5;"></i>
            <h5>No Courses Available Yet</h5>
            <p class="text-muted">Check back soon for new video courses on Azure Cloud and AI technologies.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var course in Model)
            {
                var totalSec = course.DurationSeconds > 0 ? course.DurationSeconds : (course.DurationMinutes * 60);
                var hrs = totalSec / 3600;
                var mins = (totalSec % 3600) / 60;
                var secs = totalSec % 60;
                var durationFmt = $"{hrs:D2}:{mins:D2}:{secs:D2}";
                var courseLink = !string.IsNullOrEmpty(course.SkillTechUrl) ? course.SkillTechUrl : $"/Courses/Details/{course.Id}";
                var isExternal = !string.IsNullOrEmpty(course.SkillTechUrl);

                <div class="col-12 col-md-6 col-lg-4">
                    <a href="@courseLink" target="@(isExternal ? "_blank" : "_self")" class="text-decoration-none course-card-link">
                        <div class="modern-course-card">
                            <!-- Thumbnail -->
                            <div class="course-thumbnail-wrapper">
                                @if (!string.IsNullOrEmpty(course.ThumbnailUrl))
                                {
                                    <img src="@course.ThumbnailUrl" class="course-thumbnail" alt="@course.Title">
                                }
                                else
                                {
                                    <div class="course-thumbnail-placeholder">
                                        <i class="fas fa-graduation-cap"></i>
                                    </div>
                                }
                                <div class="course-overlay">
                                    <div class="course-overlay-content">
                                        <i class="fas fa-@(isExternal ? "external-link-alt" : "play-circle") fa-3x"></i>
                                        <p class="mt-2">@(isExternal ? "View on SkillTech" : "View Course")</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="course-card-body">
                                <!-- Header -->
                                <div class="course-header">
                                    <span class="course-level-badge">@course.Level</span>
                                </div>

                                <!-- Title -->
                                <h3 class="course-title">@course.Title</h3>

                                <!-- Category & Duration Row -->
                                @if (!string.IsNullOrEmpty(course.Category))
                                {
                                    <div class="course-meta-row">
                                        <div class="course-category">
                                            <i class="fas fa-folder me-1"></i>@course.Category
                                        </div>
                                        <div class="course-duration">
                                            <i class="fas fa-clock me-1"></i>@durationFmt
                                        </div>
                                    </div>
                                }

                                <!-- Description -->
                                <p class="course-description">@course.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
        
        <style>
            .course-card-link {
                display: block;
                color: inherit;
            }

            .modern-course-card {
                background: var(--bg-secondary, #001f3f);
                border-radius: 16px;
                overflow: hidden;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
                height: 100%;
                min-height: 480px;
                display: flex;
                flex-direction: column;
                border: 1px solid var(--border-color, #333);
            }

            .modern-course-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(0, 31, 63, $1);
            }

            .course-thumbnail-wrapper {
                position: relative;
                width: 100%;
                height: 210px;
                overflow: hidden;
                background: #f5f5f5;
                border-radius: 16px 16px 0 0;
            }

            .course-thumbnail {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
                transition: transform 0.4s ease;
            }

            .modern-course-card:hover .course-thumbnail {
                transform: scale(1.1);
            }

            .course-thumbnail-placeholder {
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, #001f3f 0%, #003366 100%);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 64px;
                color: rgba(255, 255, 255, 0.9);
            }

            .course-overlay {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 31, 63, 0.9);
                display: flex;
                align-items: center;
                justify-content: center;
                opacity: 0;
                transition: opacity 0.3s ease;
                pointer-events: none;
            }

            .modern-course-card:hover .course-overlay {
                opacity: 1;
            }

            .course-overlay-content {
                text-align: center;
                color: white;
                transform: translateY(10px);
                transition: transform 0.3s ease;
            }

            .modern-course-card:hover .course-overlay-content {
                transform: translateY(0);
            }

            .course-overlay-content p {
                margin: 0;
                font-weight: 600;
                font-size: 16px;
            }

            .course-card-body {
                padding: 24px;
                flex: 1;
                display: flex;
                flex-direction: column;
            }

            .course-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 16px;
                gap: 8px;
            }

            .course-level-badge {
                background: linear-gradient(135deg, #001f3f 0%, #003366 100%);
                color: #ffffff !important;
                padding: 4px 12px;
                border-radius: 16px;
                font-size: 11px;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 0.3px;
            }

            html.light-mode .course-level-badge,
            html.light-theme .course-level-badge {
                color: #ffffff !important;
            }

            .course-title {
                font-size: 20px;
                font-weight: 700;
                color: var(--text-primary, #ffffff);
                margin: 0 0 8px 0;
                line-height: 1.4;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }

            .course-category {
                color: var(--text-secondary, #a0a0a0);
                font-size: 13px;
                font-weight: 500;
            }

            .course-meta-row {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 14px;
                padding: 8px 0;
            }

            .course-duration {
                color: var(--text-secondary, #a0a0a0);
                font-size: 13px;
                font-weight: 600;
            }

            .course-description {
                color: var(--text-secondary, #b0b0b0);
                font-size: 14px;
                line-height: 1.6;
                margin-bottom: 0;
                flex: 1;
                display: -webkit-box;
                -webkit-line-clamp: 3;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }

            @@media (max-width: 768px) {
                .modern-course-card {
                    margin-bottom: 24px;
                }
            }
        </style>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 3000);
            });
        
            // Course Search and Filter Functionality
            const searchTitle = document.getElementById('searchTitle');
            const searchCategory = document.getElementById('searchCategory');
            const searchLevel = document.getElementById('searchLevel');
            const sortBy = document.getElementById('sortBy');
            const clearSearch = document.getElementById('clearSearch');
            const courseCards = document.querySelectorAll('.col-md-4');
            
            // Exit if elements don't exist
            if (!searchTitle || !searchCategory || !searchLevel || !sortBy || !clearSearch) {
                return;
            }
        
        function filterCourses() {
            const titleQuery = searchTitle.value.toLowerCase();
            const categoryFilter = searchCategory.value.toLowerCase();
            const levelFilter = searchLevel.value.toLowerCase();
            
            let visibleCards = [];
            
            courseCards.forEach(card => {
                const title = card.querySelector('.course-title')?.textContent.toLowerCase() || '';
                const category = card.querySelector('.course-category')?.textContent.toLowerCase() || '';
                const level = card.querySelector('.badge')?.textContent.toLowerCase() || '';
                
                const matchesTitle = !titleQuery || title.includes(titleQuery);
                const matchesCategory = !categoryFilter || category.includes(categoryFilter);
                const matchesLevel = !levelFilter || level.includes(levelFilter);
                
                if (matchesTitle && matchesCategory && matchesLevel) {
                    card.style.display = '';
                    visibleCards.push(card);
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Apply sorting
            const sortValue = sortBy.value;
            if (sortValue && visibleCards.length > 0) {
                const parent = visibleCards[0].parentNode;
                visibleCards.sort((a, b) => {
                    if (sortValue === 'newest' || sortValue === 'oldest') {
                        const dateA = new Date(a.dataset.created || 0);
                        const dateB = new Date(b.dataset.created || 0);
                        return sortValue === 'newest' ? dateB - dateA : dateA - dateB;
                    } else if (sortValue === 'rating') {
                        const ratingA = parseFloat(a.querySelector('.course-rating')?.textContent || 0);
                        const ratingB = parseFloat(b.querySelector('.course-rating')?.textContent || 0);
                        return ratingB - ratingA;
                    } else if (sortValue === 'enrollments') {
                        const enrollA = parseInt(a.dataset.enrollments || 0);
                        const enrollB = parseInt(b.dataset.enrollments || 0);
                        return enrollB - enrollA;
                    }
                    return 0;
                });
                visibleCards.forEach(card => parent.appendChild(card));
            }
        }
        
        searchTitle.addEventListener('input', filterCourses);
        searchCategory.addEventListener('change', filterCourses);
        searchLevel.addEventListener('change', filterCourses);
        sortBy.addEventListener('change', filterCourses);
        
        clearSearch.addEventListener('click', () => {
            searchTitle.value = '';
            searchCategory.value = '';
            searchLevel.value = '';
            sortBy.value = 'newest';
            filterCourses();
        });
        });
    </script>
}


