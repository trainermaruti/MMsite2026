@model Profile

@{
    ViewData["Title"] = "About Maruti Makwana | Microsoft Certified Trainer (MCT) | Azure & AI Expert";
    ViewData["Description"] = "Maruti Makwana is a Microsoft Certified Trainer (MCT) based in Ahmedabad, with 19+ years of experience in AZ-104, AI-900, and enterprise Cloud solutions.";
    ViewData["Keywords"] = "Maruti Makwana, MCT, Microsoft Certified Trainer, AZ-104 trainer, AI-900 training Ahmedabad, Azure AI expert India, SkillTech Club founder";
    ViewData["CanonicalUrl"] = "https://marutimakwana.com/Profile/About";
}

@* NEW PROFESSIONAL ABOUT SECTION *@
@await Html.PartialAsync("_AboutSection")

@* ORIGINAL PROFILE CONTENT (Keep for dynamic data) *@
<div class="container mt-5 mb-5" style="display: none;">
    @* Hidden but preserved for backend compatibility *@
    <div class="row">
        <div class="col-md-4 text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="@Model.ProfileImageUrl" class="img-fluid rounded-circle shadow-lg" style="max-width: 300px; border: 5px solid #667eea;">
            }
            else
            {
                <div class="bg-light rounded-circle shadow-lg mx-auto" style="width: 300px; height: 300px; display: flex; align-items: center; justify-content: center; border: 5px solid #667eea;">
                    <i class="fas fa-user fa-5x text-muted"></i>
                </div>
            }
            <h2 class="mt-4">@Model.FullName</h2>
            <h5 class="text-primary mb-3">@Model.Title</h5>
        </div>
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">About Me</h5>
                </div>
                <div class="card-body">
                    <p class="lead">Maruti Makwana is a corporate technical trainer and software professional based in Ahmedabad, India, with over 19 years of experience in industrial automation, Azure Cloud, AI, and enterprise systems. He specializes in delivering instructor-led workshops and customized enterprise sessions for IT professionals and engineering teams worldwide.</p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Expertise & Skills</h5>
                </div>
                <div class="card-body">
                    <p>@Model.Expertise</p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Certifications & Achievements</h5>
                </div>
                <div class="card-body">
                    <p>@Model.CertificationsAndAchievements</p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h4 class="text-warning">@Model.TotalTrainingsDone+</h4>
                            <p class="text-muted">Trainings Delivered</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h4 class="text-success">@Model.TotalStudents+</h4>
                            <p class="text-muted">Students Trained</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h4 class="text-danger">100%</h4>
                            <p class="text-muted">Satisfaction Rate</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h4 class="text-info">135+</h4>
                            <p class="text-muted">Companies Trained</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Connect With Me</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><i class="fas fa-envelope text-danger"></i> <strong>Email:</strong> @Model.Email</p>
                            <p><i class="fas fa-phone text-success"></i> <strong>Phone:</strong> @Model.PhoneNumber</p>
                            <p><i class="fab fa-whatsapp text-success"></i> <strong>WhatsApp:</strong> @Model.WhatsAppNumber</p>
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.LinkedInUrl))
                            {
                                <a href="@Model.LinkedInUrl" target="_blank" class="btn btn-sm btn-linkedin mb-2 w-100"><i class="fab fa-linkedin"></i> LinkedIn</a>
                            }
                            @if (!string.IsNullOrEmpty(Model.TwitterUrl))
                            {
                                <a href="@Model.TwitterUrl" target="_blank" class="btn btn-sm btn-twitter mb-2 w-100"><i class="fab fa-twitter"></i> Twitter</a>
                            }
                            @if (!string.IsNullOrEmpty(Model.GitHubUrl))
                            {
                                <a href="@Model.GitHubUrl" target="_blank" class="btn btn-sm btn-dark mb-2 w-100"><i class="fab fa-github"></i> GitHub</a>
                            }
                        </div>
                    </div>
                    <hr>
                    <a href="/Contact" class="btn btn-primary w-100"><i class="fas fa-paper-plane"></i> Send Me a Message</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <a href="/Profile/Edit" class="btn btn-warning"><i class="fas fa-edit"></i> Edit Profile</a>
            <a href="/" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Home</a>
        </div>
    </div>
</div>

<style>
.btn-linkedin { background-color: #0a66c2; color: white; }
.btn-linkedin:hover { background-color: #0854a3; color: white; }
.btn-twitter { background-color: #1da1f2; color: white; }
.btn-twitter:hover { background-color: #1a8cd8; color: white; }
</style>
