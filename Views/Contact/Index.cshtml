@model MarutiTrainingPortal.Models.Profile
@{
    ViewData["Title"] = "Contact Me";
}

<!-- Google reCAPTCHA v2 API -->
<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<style>
    /* White icons and text for buttons/headers in both light and dark mode */
    .contact-btn-icon {
        color: #ffffff !important;
        filter: brightness(0) invert(1);
        -webkit-text-fill-color: #ffffff !important;
    }
    
    /* Ensure headers and button text are white */
    .card-header .contact-btn-icon,
    .btn .contact-btn-icon {
        color: #ffffff !important;
    }
    
    /* Force white text on blue backgrounds */
    .white-text-force {
        color: #ffffff !important;
        -webkit-text-fill-color: #ffffff !important;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Get in Touch</h1>
            <p class="lead mb-4">Have questions about my trainings, courses, or events? Feel free to reach out. I'll get back to you as soon as possible!</p>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row mb-5">
                <div class="col-md-6 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-envelope fa-2x text-danger mb-3"></i>
                            <h5 class="card-title">Email</h5>
                            <p class="card-text">@Model?.Email</p>
                            <a href="mailto:@Model?.Email" class="btn btn-sm btn-danger">Send Email</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fab fa-whatsapp fa-2x text-success mb-3"></i>
                            <h5 class="card-title">WhatsApp</h5>
                            <p class="card-text">@Model?.WhatsAppNumber</p>
                            <a href="https://wa.me/@(Model?.WhatsAppNumber?.Replace("+", "").Replace(" ", ""))" class="btn btn-sm btn-success" target="_blank">Chat on WhatsApp</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Calendly Booking Option -->
            <div class="card shadow-lg mb-4" style="border: 2px solid #3b82f6;">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); padding: 20px;">
                    <h5 class="mb-0" style="color: #ffffff !important;">
                        <i class="fas fa-calendar-check me-2 contact-btn-icon"></i>Book a Meeting Directly
                    </h5>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-video fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Schedule a Consultation with Maruti</h5>
                    <p class="card-text text-muted mb-4">
                        Prefer to discuss your training needs directly? Book a free consultation call to discuss:
                    </p>
                    <ul class="text-start mb-4" style="max-width: 500px; margin: 0 auto;">
                        <li>Corporate Azure & AI training programs</li>
                        <li>Custom workshop requirements</li>
                        <li>Certification roadmaps (AZ-104, AI-102, etc.)</li>
                        <li>Team upskilling strategies</li>
                    </ul>
                    <a asp-controller="Contact" asp-action="Booking" class="btn btn-lg px-5 py-3" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: #ffffff !important; border: none; border-radius: 12px; font-weight: 600; font-size: 16px;">
                        <i class="fas fa-calendar-alt me-2 contact-btn-icon"></i>Book Your Slot Now
                    </a>
                    <p class="text-muted mt-3 mb-0" style="font-size: 14px;">
                        <i class="fas fa-clock me-1"></i>Available slots update in real-time
                    </p>
                </div>
            </div>

            <div class="text-center mb-4">
                <p class="text-muted">
                    <strong>Or</strong> fill out the contact form below, and I'll get back to you within 24-48 hours.
                </p>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white" style="padding: 20px;">
                    <h5 class="mb-0" style="color: #ffffff !important;">Send Me a Message</h5>
                </div>
                <div class="card-body">
                    <!-- Success/Error Messages -->
                    <div id="form-message" class="alert alert-dismissible fade" role="alert" style="display: none;">
                        <span id="form-message-text"></span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>

                    <form id="contactForm" action="/Contact/Submit" method="POST">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label for="Name" class="form-label">Full Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Name" name="Name" autocomplete="name" required maxlength="100" aria-describedby="Name-error">
                            <span id="Name-error" class="text-danger" role="alert"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="Email" name="Email" autocomplete="email" required maxlength="100" aria-describedby="Email-error">
                            <span id="Email-error" class="text-danger" role="alert"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Phone" class="form-label">Phone Number <span class="text-danger">*</span></label>
                            <div class="input-group">
                                @await Html.PartialAsync("_CountryCodeSelect")
                                <input type="tel" class="form-control" id="Phone" name="Phone" autocomplete="tel" required maxlength="15" aria-describedby="Phone-error" placeholder="Enter phone number">
                            </div>
                            <span id="Phone-error" class="text-danger" role="alert"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Company" class="form-label">Company</label>
                            <input type="text" class="form-control" id="Company" name="Company" autocomplete="organization" maxlength="100" aria-describedby="Company-error">
                            <span id="Company-error" class="text-danger" role="alert"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Subject" class="form-label">Subject <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Subject" name="Subject" autocomplete="off" required maxlength="200" aria-describedby="Subject-error">
                            <span id="Subject-error" class="text-danger" role="alert"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Message" class="form-label">Message <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="Message" name="Message" rows="5" autocomplete="off" required maxlength="2000" aria-describedby="Message-error"></textarea>
                            <span id="Message-error" class="text-danger" role="alert"></span>
                        </div>

                        <!-- reCAPTCHA v2 Widget -->
                        <div class="mb-3">
                            <div class="g-recaptcha" data-sitekey="6LfnrkEsAAAAAJBACUsRy9DSqi7TzpGjyiP1Fo-N"></div>
                            <span id="recaptcha-error" class="text-danger" role="alert"></span>
                        </div>

                        <button type="submit" class="btn btn-primary" id="submitBtn" style="color: #ffffff !important;">
                            <i class="fas fa-paper-plane me-2 contact-btn-icon"></i>Send Message
                        </button>
                        <a href="/" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>

            <div class="mt-5 text-center">
                <p class="text-muted">For immediate assistance, prefer using WhatsApp or Email. Response time: 24-48 hours.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('contactForm');
            const submitBtn = document.getElementById('submitBtn');
            const messageDiv = document.getElementById('form-message');
            const messageText = document.getElementById('form-message-text');

            form.addEventListener('submit', async function(e) {
                e.preventDefault();

                // Validate reCAPTCHA
                const recaptchaResponse = grecaptcha.getResponse();
                const recaptchaError = document.getElementById('recaptcha-error');
                
                if (!recaptchaResponse) {
                    recaptchaError.textContent = 'Please complete the reCAPTCHA verification.';
                    recaptchaError.parentElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    return;
                }
                
                recaptchaError.textContent = '';

                // Disable submit button
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending...';

                // Clear previous errors
                document.querySelectorAll('[id$="-error"]').forEach(el => el.textContent = '');
                messageDiv.style.display = 'none';

                try {
                    const formData = new FormData(form);
                    
                    // Combine country code and phone number
                    const countryCode = document.getElementById('CountryCode').value;
                    const phoneNumber = document.getElementById('Phone').value;
                    formData.set('Phone', countryCode + phoneNumber);
                    
                    const response = await fetch(form.action, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        // Show success message
                        messageText.textContent = result.message;
                        messageDiv.className = 'alert alert-success alert-dismissible fade show';
                        messageDiv.style.display = 'block';
                        
                        // Reset form and reCAPTCHA
                        form.reset();
                        grecaptcha.reset();
                        
                        // Scroll to message
                        messageDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    } else {
                        // Show error message
                        messageText.textContent = result.message;
                        messageDiv.className = 'alert alert-danger alert-dismissible fade show';
                        messageDiv.style.display = 'block';
                        
                        // Reset reCAPTCHA on error
                        grecaptcha.reset();
                        
                        // Scroll to message
                        messageDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                } catch (error) {
                    console.error('Form submission error:', error);
                    
                    // Fallback to standard form submission if AJAX fails
                    form.submit();
                    return;
                }

                // Re-enable submit button
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Send Message';
            });
        });
    </script>
}