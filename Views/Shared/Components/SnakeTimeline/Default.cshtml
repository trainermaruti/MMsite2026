<style>
    @@keyframes pulse {
        0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.6; }
        50% { transform: translate(-50%, -50%) scale(1.5); opacity: 0; }
    }
    
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    /* Theme-aware colors for timeline */
    .timeline-heading,
    .timeline-stat {
        color: var(--text-primary) !important;
    }
    
    .timeline-subheading,
    .timeline-stat-label,
    .timeline-badge-text {
        color: var(--text-secondary) !important;
    }
    
    .timeline-badge {
        background: var(--card-bg) !important;
        border: 1px solid var(--border-color) !important;
    }
    
    .snake-timeline-nodes > div {
        animation: fadeInUp 0.6s ease-out backwards;
    }
    
    .snake-timeline-nodes > div:nth-child(2) { animation-delay: 0.1s; }
    .snake-timeline-nodes > div:nth-child(3) { animation-delay: 0.2s; }
    .snake-timeline-nodes > div:nth-child(4) { animation-delay: 0.3s; }
    .snake-timeline-nodes > div:nth-child(5) { animation-delay: 0.4s; }
    .snake-timeline-nodes > div:nth-child(6) { animation-delay: 0.5s; }
    
    /* Mobile Responsive Styles */
    @@media (max-width: 768px) {
        .snake-timeline-wrapper {
            padding: 60px 10px !important;
            margin: 30px 0 40px 0 !important;
        }
        
        .snake-timeline-wrapper h2 {
            font-size: 2rem !important;
        }
        
        .snake-timeline-wrapper p {
            font-size: 1rem !important;
        }
        
        .timeline-node-wrapper {
            padding-left: 0 !important;
            margin-bottom: 50px !important;
            align-items: center !important;
            width: 100% !important;
        }
        
        .timeline-node-wrapper > div:first-child {
            width: 100% !important;
            max-width: 100% !important;
            padding: 0 10px !important;
        }
        
        .timeline-node-wrapper > div:first-child > div:first-child,
        .timeline-node-wrapper > div:first-child > div:last-child {
            min-width: 20px !important;
        }
        
        .timeline-node-wrapper > div:first-child > div:nth-child(2) {
            width: 48px !important;
            height: 48px !important;
        }
        
        .timeline-node-wrapper > div:first-child > div:nth-child(2) span {
            font-size: 1.4rem !important;
        }
        
        .timeline-card {
            max-width: 100% !important;
            margin-left: 0 !important;
            margin-right: 0 !important;
        }
    }
</style>

