@model List<Video>

@{
    ViewData["Title"] = "Manage Video Library";
    Layout = "_ModernAdminLayout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="background: var(--success-light); border: 1px solid var(--success); color: var(--success); border-radius: 12px; margin-bottom: 24px;">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Modern Page Header -->
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px; flex-wrap: wrap; gap: 16px;">
    <div>
        <h1 style="font-size: 32px; font-weight: 700; color: var(--text-primary); margin-bottom: 8px;">
            <i class="fas fa-play-circle" style="color: #3b82f6; margin-right: 12px;"></i>Manage Video Library
        </h1>
        <p style="color: var(--text-secondary); font-size: 15px; margin: 0;">Create, edit, and manage your showcase videos</p>
    </div>
    <div style="display: flex; gap: 12px; flex-wrap: wrap; align-items: center;">
        <a asp-action="Create" class="modern-btn modern-btn-primary" style="white-space: nowrap;">
            <i class="fas fa-plus me-2"></i>Add New Video
        </a>
        <button type="button" onclick="importFromJson()" class="modern-btn modern-btn-info" style="white-space: nowrap;">
            <i class="fas fa-file-import me-2"></i>Import from JSON
        </button>
        <button type="button" onclick="syncToJson()" class="modern-btn" style="white-space: nowrap; min-width: auto; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border: none; box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);">
            <i class="fas fa-sync-alt me-2"></i>Sync to JSON
        </button>
    </div>
</div>

@if (Model == null || Model.Count == 0)
{
    <div style="background: var(--bg-secondary); border: 1px solid var(--border-color); border-radius: 12px; padding: 48px; text-align: center;">
        <i class="fas fa-play-circle" style="font-size: 64px; color: var(--text-muted); margin-bottom: 16px;"></i>
        <h3 style="color: var(--text-secondary); margin-bottom: 8px;">No videos found</h3>
        <p style="color: var(--text-muted); margin-bottom: 24px;">Get started by adding your first video.</p>
        <a asp-action="Create" class="modern-btn modern-btn-primary">
            <i class="fas fa-plus me-2"></i>Add First Video
        </a>
    </div>
}
else
{
    <div class="modern-table-container">
        <table class="modern-table">
            <thead>
                <tr>
                    <th>CATEGORY</th>
                    <th>PUBLISH DATE</th>
                    <th>STATUS</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var video in Model)
                {
                    <tr>
                        <td>
                            <div style="width: 120px; height: 68px; border-radius: 8px; overflow: hidden; border: 1px solid var(--border-color);">
                                <img src="@(string.IsNullOrEmpty(video.ThumbnailUrl) ? video.GenerateThumbnailUrl() : video.ThumbnailUrl)" 
                                     alt="Thumb" style="width: 100%; height: 100%; object-fit: cover;" />
                            </div>
                        </td>
                        <td>
                            <strong style="color: var(--text-primary); display: block;">@video.Title</strong>
                            <small class="text-muted" style="display: block; max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@video.VideoUrl</small>
                        </td>
                        <td>
                            <span class="badge bg-secondary">@video.Category</span>
                        </td>
                        <td>
                            @video.PublishDate.ToString("dd MMM yyyy")
                        </td>
                        <td>
                            @if (video.IsActive)
                            {
                                <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i> Live</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark"><i class="fas fa-edit me-1"></i> Draft</span>
                            }
                        </td>
                        <td>
                            <div style="display: flex; gap: 8px;">
                                <a asp-action="Edit" asp-route-id="@video.Id" class="modern-btn modern-btn-ghost" style="padding: 6px 12px; font-size: 13px;">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@video.Id" class="modern-btn modern-btn-danger" style="padding: 6px 12px; font-size: 13px;">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <script>
        // Auto-dismiss alerts
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 3000);
        });

        async function syncToJson() {
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');
            icon.classList.add('fa-spin');
            btn.disabled = true;
            
            try {
                const response = await fetch('@Url.Action("SyncToJson")', {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() }
                });
                if (response.ok) {
                    alert('Successfully synced to JSON!');
                } else {
                    alert('Sync failed.');
                }
            } catch (e) {
                alert('An error occurred.');
            } finally {
                icon.classList.remove('fa-spin');
                btn.disabled = false;
            }
        }

        async function importFromJson() {
            if (!confirm('This will replace current video records with data from the JSON file. Continue?')) return;
            
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');
            icon.classList.add('fa-spin');
            btn.disabled = true;
            
            try {
                const response = await fetch('@Url.Action("ImportFromJson")', {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() }
                });
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Import failed.');
                }
            } catch (e) {
                alert('An error occurred.');
            } finally {
                icon.classList.remove('fa-spin');
                btn.disabled = false;
            }
        }
    </script>
}
