@model IEnumerable<MarutiTrainingPortal.Models.FeaturedVideo>

@{
    ViewData["Title"] = "Featured Videos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Featured Videos</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Video
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>YouTube URL</th>
                            <th>Active</th>
                            <th>Display Order</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var video in Model)
                            {
                                <tr>
                                    <td>@video.Title</td>
                                    <td>
                                        <a href="@video.YouTubeUrl" target="_blank" class="text-decoration-none">
                                            <i class="fab fa-youtube text-danger"></i> View
                                        </a>
                                    </td>
                                    <td>
                                        @if (video.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@video.DisplayOrder</td>
                                    <td>@video.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@video.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@video.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <i class="fas fa-video fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No featured videos found. Click "Add New Video" to create one.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
