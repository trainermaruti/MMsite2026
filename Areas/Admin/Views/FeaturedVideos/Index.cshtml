@model IEnumerable<MarutiTrainingPortal.Models.FeaturedVideo>

@{
    ViewData["Title"] = "Featured Videos";
    Layout = "_ModernAdminLayout";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px; flex-wrap: wrap; gap: 16px;">
    <div>
        <h1 style="font-size: 32px; font-weight: 700; color: var(--text-primary); margin-bottom: 8px;">
            <i class="fas fa-star" style="color: #3b82f6; margin-right: 12px;"></i>Featured Videos
        </h1>
        <p style="color: var(--text-secondary); font-size: 15px; margin: 0;">Manage the top videos featured on your home page</p>
    </div>
    <div style="display: flex; gap: 12px; flex-wrap: wrap; align-items: center;">
        <a asp-action="Create" class="modern-btn modern-btn-primary" style="white-space: nowrap;">
            <i class="fas fa-plus me-2"></i>Add New Video
        </a>
        <button type="button" onclick="importFromJson()" class="modern-btn modern-btn-info" style="white-space: nowrap;">
            <i class="fas fa-file-import me-2"></i>Import from JSON
        </button>
        <button type="button" onclick="syncToJson()" class="modern-btn" style="white-space: nowrap; min-width: auto; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border: none; box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);">
            <i class="fas fa-sync-alt me-2"></i>Sync to JSON
        </button>
    </div>
</div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="background: var(--success-bg); color: var(--success); border: 1px solid var(--success); border-radius: 8px; margin-bottom: 24px;">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="modern-table-container">
        <table class="modern-table">
            <thead>
                <tr>
                    <th>TITLE</th>
                    <th>YOUTUBE URL</th>
                    <th>STATUS</th>
                    <th>ORDER</th>
                    <th>CREATED</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var video in Model)
                    {
                        <tr>
                            <td><strong style="color: var(--text-primary);">@video.Title</strong></td>
                            <td>
                                <a href="@video.YouTubeUrl" target="_blank" class="text-decoration-none" style="color: var(--text-primary);">
                                    <i class="fab fa-youtube text-danger me-1"></i> View Video
                                </a>
                            </td>
                            <td>
                                @if (video.IsActive)
                                {
                                    <span class="badge" style="background: var(--success-bg); color: var(--success); border: 1px solid var(--success);">Active</span>
                                }
                                else
                                {
                                    <span class="badge" style="background: var(--bg-tertiary); color: var(--text-muted); border: 1px solid var(--border-color);">Inactive</span>
                                }
                            </td>
                            <td><span class="badge bg-primary">@video.DisplayOrder</span></td>
                            <td>@video.CreatedDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div style="display: flex; gap: 8px;">
                                    <a asp-action="Edit" asp-route-id="@video.Id" class="modern-btn modern-btn-ghost" style="padding: 6px 12px; font-size: 13px;">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@video.Id" class="modern-btn modern-btn-danger" style="padding: 6px 12px; font-size: 13px;">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" style="text-align: center; padding: 48px;">
                            <i class="fas fa-video fa-3x text-muted mb-3"></i>
                            <p style="color: var(--text-muted);">No featured videos found. Click "Add New Video" to create one.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Import from JSON function
        async function importFromJson() {
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');
            
            icon.classList.add('fa-spin');
            btn.disabled = true;
            
            try {
                const response = await fetch('@Url.Action("ImportFromJson", "FeaturedVideos", new { area = "Admin" })', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });
                
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Error importing from JSON file.');
                }
            } catch (error) {
                alert('Error importing from JSON file.');
            } finally {
                icon.classList.remove('fa-spin');
                btn.disabled = false;
            }
        }

        // Sync to JSON function
        async function syncToJson() {
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');
            
            icon.classList.add('fa-spin');
            btn.disabled = true;
            
            try {
                const response = await fetch('@Url.Action("SyncToJson", "FeaturedVideos", new { area = "Admin" })', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });
                
                if (response.ok) {
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-success alert-dismissible fade show';
                    alertDiv.style.cssText = 'background: var(--success-bg); color: var(--success); border: 1px solid var(--success); border-radius: 8px; margin-bottom: 24px;';
                    alertDiv.innerHTML = '<i class="fas fa-check-circle me-2"></i>Successfully synced all featured videos to JSON file!<button type="button" class="btn-close" data-bs-dismiss="alert"></button>';
                    document.querySelector('.modern-table-container').insertAdjacentElement('beforebegin', alertDiv);
                    
                    setTimeout(() => {
                        const bsAlert = new bootstrap.Alert(alertDiv);
                        bsAlert.close();
                    }, 3000);
                } else {
                    throw new Error('Sync failed');
                }
            } catch (error) {
                const alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-danger alert-dismissible fade show';
                alertDiv.style.cssText = 'background: #fee; border: 1px solid #f00; color: #c00; border-radius: 8px; margin-bottom: 24px;';
                alertDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Error syncing to JSON file.<button type="button" class="btn-close" data-bs-dismiss="alert"></button>';
                document.querySelector('.modern-table-container').insertAdjacentElement('beforebegin', alertDiv);
            } finally {
                icon.classList.remove('fa-spin');
                btn.disabled = false;
            }
        }
    </script>
}
