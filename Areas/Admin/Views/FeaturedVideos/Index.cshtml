@model IEnumerable<MarutiTrainingPortal.Models.FeaturedVideo>

@{
    ViewData["Title"] = "Featured Videos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Featured Videos</h1>
        <div style="display: flex; gap: 12px; flex-wrap: wrap;">
            <a asp-action="Create" class="btn btn-primary" style="white-space: nowrap;">
                <i class="fas fa-plus"></i> Add New Video
            </a>
            <button type="button" onclick="importFromJson()" class="btn btn-info" style="white-space: nowrap;">
                <i class="fas fa-file-import"></i> Import from JSON
            </button>
            <button type="button" onclick="syncToJson()" class="btn" style="white-space: nowrap; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border: none; box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);">
                <i class="fas fa-sync-alt"></i> Sync to JSON
            </button>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>YouTube URL</th>
                            <th>Active</th>
                            <th>Display Order</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var video in Model)
                            {
                                <tr>
                                    <td>@video.Title</td>
                                    <td>
                                        <a href="@video.YouTubeUrl" target="_blank" class="text-decoration-none">
                                            <i class="fab fa-youtube text-danger"></i> View
                                        </a>
                                    </td>
                                    <td>
                                        @if (video.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@video.DisplayOrder</td>
                                    <td>@video.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@video.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@video.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <i class="fas fa-video fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No featured videos found. Click "Add New Video" to create one.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Import from JSON function
        async function importFromJson() {
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');
            
            icon.classList.add('fa-spin');
            btn.disabled = true;
            
            try {
                const response = await fetch('@Url.Action("ImportFromJson", "FeaturedVideos", new { area = "Admin" })', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });
                
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Error importing from JSON file.');
                }
            } catch (error) {
                alert('Error importing from JSON file.');
            } finally {
                icon.classList.remove('fa-spin');
                btn.disabled = false;
            }
        }

        // Sync to JSON function
        async function syncToJson() {
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');
            
            icon.classList.add('fa-spin');
            btn.disabled = true;
            
            try {
                const response = await fetch('@Url.Action("SyncToJson", "FeaturedVideos", new { area = "Admin" })', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });
                
                if (response.ok) {
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-success alert-dismissible fade show';
                    alertDiv.innerHTML = '<i class="fas fa-check-circle me-2"></i>Successfully synced all featured videos to JSON file!<button type="button" class="btn-close" data-bs-dismiss="alert"></button>';
                    document.querySelector('.card').insertAdjacentElement('beforebegin', alertDiv);
                    
                    setTimeout(() => {
                        const bsAlert = new bootstrap.Alert(alertDiv);
                        bsAlert.close();
                    }, 3000);
                } else {
                    throw new Error('Sync failed');
                }
            } catch (error) {
                const alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-danger alert-dismissible fade show';
                alertDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Error syncing to JSON file.<button type="button" class="btn-close" data-bs-dismiss="alert"></button>';
                document.querySelector('.card').insertAdjacentElement('beforebegin', alertDiv);
            } finally {
                icon.classList.remove('fa-spin');
                btn.disabled = false;
            }
        }
    </script>
}
