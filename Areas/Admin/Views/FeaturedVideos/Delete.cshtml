@model MarutiTrainingPortal.Models.FeaturedVideo

@{
    ViewData["Title"] = "Delete Featured Video";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Delete Featured Video</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this featured video?
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@(Model.Description ?? "N/A")</dd>

                <dt class="col-sm-3">YouTube URL</dt>
                <dd class="col-sm-9">
                    <a href="@Model.YouTubeUrl" target="_blank">@Model.YouTubeUrl</a>
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </dd>

                <dt class="col-sm-3">Display Order</dt>
                <dd class="col-sm-9">@Model.DisplayOrder</dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
            </dl>

            @{
                var embedId = Model.GetYouTubeEmbedId();
            }
            @if (!string.IsNullOrEmpty(embedId))
            {
                <div class="mb-3">
                    <label class="form-label"><strong>Video Preview:</strong></label>
                    <div style="position: relative; width: 100%; max-width: 600px; padding-bottom: 33.75%; border-radius: 8px; overflow: hidden;">
                        <iframe 
                            style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
                            src="https://www.youtube.com/embed/@embedId"
                            frameborder="0"
                            allowfullscreen>
                        </iframe>
                    </div>
                </div>
            }

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
