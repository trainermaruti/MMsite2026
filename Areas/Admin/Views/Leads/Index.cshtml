@model List<ContactMessage>

@{
    ViewData["Title"] = "Lead Management";
    var currentStatus = ViewBag.CurrentStatus as string ?? "All";
    var currentSearch = ViewBag.CurrentSearch as string;
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
}

<div class="container-fluid mt-4 mb-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="gradient-text">Lead Management</h1>
            <p class="text-muted">Manage contact inquiries and event registrations</p>
        </div>
    </div>

    <!-- Status Filter Badges -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex gap-2 flex-wrap">
                <a href="?status=All" class="badge-enterprise @(currentStatus == "All" ? "active" : "")">
                    All (@totalCount)
                </a>
                <a href="?status=New" class="badge-enterprise @(currentStatus == "New" ? "active" : "")">
                    <i class="fas fa-circle" style="color: #f59e0b;"></i> New (@ViewBag.NewCount)
                </a>
                <a href="?status=Contacted" class="badge-enterprise @(currentStatus == "Contacted" ? "active" : "")">
                    <i class="fas fa-circle" style="color: #6366f1;"></i> Contacted (@ViewBag.ContactedCount)
                </a>
                <a href="?status=Qualified" class="badge-enterprise @(currentStatus == "Qualified" ? "active" : "")">
                    <i class="fas fa-circle" style="color: #8b5cf6;"></i> Qualified (@ViewBag.QualifiedCount)
                </a>
                <a href="?status=Converted" class="badge-enterprise @(currentStatus == "Converted" ? "active" : "")">
                    <i class="fas fa-circle" style="color: #10b981;"></i> Converted (@ViewBag.ConvertedCount)
                </a>
                <a href="?status=Closed" class="badge-enterprise @(currentStatus == "Closed" ? "active" : "")">
                    <i class="fas fa-circle" style="color: #6b7280;"></i> Closed (@ViewBag.ClosedCount)
                </a>
            </div>
        </div>
    </div>

    <!-- Search & Export -->
    <div class="row mb-4">
        <div class="col-md-8">
            <form method="get" class="d-flex gap-2">
                <input type="hidden" name="status" value="@currentStatus" />
                <input type="text" name="search" class="form-control-modern" placeholder="Search by name, email, or message..." value="@currentSearch" style="flex: 1;">
                <button type="submit" class="btn-enterprise">
                    <i class="fas fa-search"></i> Search
                </button>
                @if (!string.IsNullOrEmpty(currentSearch))
                {
                    <a href="?status=@currentStatus" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                }
            </form>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <a href="@Url.Action("ExportCsv", new { status = currentStatus })" class="btn-enterprise">
                    <i class="fas fa-file-csv"></i> Export CSV
                </a>
                <a href="@Url.Action("ExportExcel", new { status = currentStatus })" class="btn-enterprise">
                    <i class="fas fa-file-excel"></i> Export Excel
                </a>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Leads Table -->
    <div class="card-enterprise">
        @if (Model == null || Model.Count == 0)
        {
            <div class="alert alert-enterprise-info">
                <i class="fas fa-info-circle"></i> No leads found matching your criteria.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table-enterprise">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Event</th>
                            <th>Message</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lead in Model)
                        {
                            <tr id="lead-@lead.Id">
                                <td>#@lead.Id</td>
                                <td>
                                    <strong style="color: var(--color-text-primary);">@lead.Name</strong>
                                </td>
                                <td>
                                    <a href="mailto:@lead.Email" style="color: var(--color-primary);">
                                        @lead.Email
                                    </a>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(lead.Phone))
                                    {
                                        <a href="tel:@lead.Phone" style="color: var(--color-text-secondary);">
                                            @lead.Phone
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (lead.Event != null)
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-calendar"></i> @lead.Event.Title
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">General Inquiry</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(lead.Message))
                                    {
                                        <span title="@lead.Message">
                                            @(lead.Message.Length > 50 ? lead.Message.Substring(0, 50) + "..." : lead.Message)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <select class="form-select form-select-sm status-select" 
                                            data-lead-id="@lead.Id" 
                                            style="background: var(--color-bg-slate); color: var(--color-text-primary); border: 1px solid rgba(99, 102, 241, 0.3); border-radius: 6px; padding: 4px 8px; min-width: 120px;">
                                        <option value="New" selected="@(lead.Status == "New")">New</option>
                                        <option value="Contacted" selected="@(lead.Status == "Contacted")">Contacted</option>
                                        <option value="Qualified" selected="@(lead.Status == "Qualified")">Qualified</option>
                                        <option value="Converted" selected="@(lead.Status == "Converted")">Converted</option>
                                        <option value="Closed" selected="@(lead.Status == "Closed")">Closed</option>
                                    </select>
                                </td>
                                <td>
                                    <small style="color: var(--color-text-secondary);">
                                        @lead.CreatedDate.ToString("MMM dd, yyyy")
                                        <br />
                                        @lead.CreatedDate.ToString("HH:mm")
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("AuditLog", new { id = lead.Id })" 
                                           class="btn btn-sm btn-outline-primary" 
                                           title="View Audit Log">
                                            <i class="fas fa-history"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-danger delete-lead" 
                                                data-lead-id="@lead.Id"
                                                title="Delete Lead">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <div class="d-flex justify-content-between align-items-center mt-4" style="padding: 20px;">
                    <div>
                        Showing page @currentPage of @totalPages (@totalCount total leads)
                    </div>
                    <nav>
                        <ul class="pagination mb-0">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="?status=@currentStatus&search=@currentSearch&page=@(currentPage - 1)">
                                    Previous
                                </a>
                            </li>
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="?status=@currentStatus&search=@currentSearch&page=@i">
                                        @i
                                    </a>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" href="?status=@currentStatus&search=@currentSearch&page=@(currentPage + 1)">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Handle status change
        document.querySelectorAll('.status-select').forEach(select => {
            select.addEventListener('change', async function() {
                const leadId = this.dataset.leadId;
                const newStatus = this.value;
                const originalStatus = this.querySelector('option:checked').textContent;
                
                const notes = prompt(`Changing status to "${newStatus}". Add notes (optional):`);
                
                try {
                    const response = await fetch('/Admin/Leads/UpdateStatus', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `id=${leadId}&status=${newStatus}&notes=${encodeURIComponent(notes || '')}`
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Show success message
                        const row = document.getElementById(`lead-${leadId}`);
                        row.style.backgroundColor = 'rgba(16, 185, 129, 0.1)';
                        setTimeout(() => {
                            row.style.backgroundColor = '';
                        }, 2000);
                        
                        // Optionally reload to update counts
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    } else {
                        alert('Failed to update status: ' + result.message);
                        // Revert to original
                        this.value = originalStatus;
                    }
                } catch (error) {
                    console.error('Error updating status:', error);
                    alert('Failed to update status. Please try again.');
                    this.value = originalStatus;
                }
            });
        });
        
        // Handle delete
        document.querySelectorAll('.delete-lead').forEach(button => {
            button.addEventListener('click', async function() {
                if (!confirm('Are you sure you want to delete this lead? This action cannot be undone.')) {
                    return;
                }
                
                const leadId = this.dataset.leadId;
                
                try {
                    const response = await fetch('/Admin/Leads/Delete/' + leadId, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        }
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Remove row with animation
                        const row = document.getElementById(`lead-${leadId}`);
                        row.style.opacity = '0';
                        row.style.transition = 'opacity 0.3s';
                        setTimeout(() => {
                            row.remove();
                            window.location.reload();
                        }, 300);
                    } else {
                        alert('Failed to delete lead: ' + result.message);
                    }
                } catch (error) {
                    console.error('Error deleting lead:', error);
                    alert('Failed to delete lead. Please try again.');
                }
            });
        });
    });
    </script>
}

<style>
.badge-enterprise {
    display: inline-block;
    padding: 8px 16px;
    background: var(--color-bg-slate);
    color: var(--color-text-primary);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 14px;
}

.badge-enterprise:hover {
    background: rgba(99, 102, 241, 0.1);
    border-color: var(--color-primary);
    transform: translateY(-2px);
}

.badge-enterprise.active {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
}

.pagination .page-link {
    background: var(--color-bg-slate);
    color: var(--color-text-primary);
    border: 1px solid rgba(99, 102, 241, 0.3);
}

.pagination .page-link:hover {
    background: rgba(99, 102, 241, 0.1);
    border-color: var(--color-primary);
}

.pagination .page-item.active .page-link {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
}

.pagination .page-item.disabled .page-link {
    opacity: 0.5;
    cursor: not-allowed;
}
</style>
