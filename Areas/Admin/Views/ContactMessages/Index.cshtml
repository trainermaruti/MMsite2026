@model IEnumerable<MarutiTrainingPortal.Models.ContactMessage>

@{
    ViewData["Title"] = "Contact Messages";
    var unreadCount = ViewBag.UnreadCount;
    var currentStatus = ViewBag.CurrentStatus;
    var unreadOnly = ViewBag.UnreadOnly;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-envelope me-2"></i>Contact Messages
            @if (unreadCount > 0)
            {
                <span class="badge bg-danger ms-2">@unreadCount New</span>
            }
        </h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="All" selected="@(currentStatus == "All")">All Messages</option>
                        <option value="New" selected="@(currentStatus == "New")">New</option>
                        <option value="In Progress" selected="@(currentStatus == "In Progress")">In Progress</option>
                        <option value="Resolved" selected="@(currentStatus == "Resolved")">Resolved</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Read Status</label>
                    <select name="unreadOnly" class="form-select">
                        <option value="false" selected="@(!unreadOnly)">All</option>
                        <option value="true" selected="@(unreadOnly)">Unread Only</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter me-2"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Messages List -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width: 50px;"></th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Status</th>
                                <th>Submitted</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var message in Model)
                            {
                                <tr class="@(message.IsRead ? "" : "table-warning")">
                                    <td class="text-center">
                                        @if (!message.IsRead)
                                        {
                                            <i class="fas fa-circle text-primary" style="font-size: 8px;" title="Unread"></i>
                                        }
                                    </td>
                                    <td>
                                        <strong>@message.Name</strong>
                                        @if (!string.IsNullOrEmpty(message.Company))
                                        {
                                            <br /><small class="text-muted">@message.Company</small>
                                        }
                                    </td>
                                    <td>
                                        <a href="mailto:@message.Email">@message.Email</a>
                                        @if (!string.IsNullOrEmpty(message.PhoneNumber))
                                        {
                                            <br /><small class="text-muted"><i class="fas fa-phone"></i> @message.PhoneNumber</small>
                                        }
                                    </td>
                                    <td>@message.Subject</td>
                                    <td>
                                        <span class="badge bg-@(message.Status switch
                                        {
                                            "New" => "primary",
                                            "In Progress" => "warning",
                                            "Resolved" => "success",
                                            _ => "secondary"
                                        })">
                                            @message.Status
                                        </span>
                                    </td>
                                    <td>
                                        <small>@message.CreatedDate.ToString("MMM dd, yyyy")</small><br />
                                        <small class="text-muted">@message.CreatedDate.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@message.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@message.Id" method="post" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this message?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-3">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" 
                                       asp-route-status="@currentStatus" asp-route-unreadOnly="@unreadOnly">
                                        @i
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }

                <div class="text-muted text-center mt-2">
                    Showing @Model.Count() of @ViewBag.TotalMessages messages
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No messages found.</p>
                </div>
            }
        </div>
    </div>
</div>
