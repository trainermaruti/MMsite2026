@model MarutiTrainingPortal.Models.ContactMessage

@{
    ViewData["Title"] = "Contact Message Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-envelope-open me-2"></i>Message Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Message Content -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@Model.Subject</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6 class="text-muted">From:</h6>
                        <div class="d-flex align-items-start">
                            <div class="flex-grow-1">
                                <strong>@Model.Name</strong>
                                @if (!string.IsNullOrEmpty(Model.Company))
                                {
                                    <span class="text-muted">- @Model.Company</span>
                                }
                                <br />
                                <a href="mailto:@Model.Email">@Model.Email</a>
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <br />
                                    <i class="fas fa-phone text-muted me-1"></i>
                                    <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                                }
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <h6 class="text-muted">Message:</h6>
                        <div style="white-space: pre-wrap;">@Model.Message</div>
                    </div>

                    @if (Model.Event != null)
                    {
                        <hr />
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Related Event:</strong> 
                            <a asp-area="Admin" asp-controller="Events" asp-action="Edit" asp-route-id="@Model.EventId">
                                @Model.Event.Title
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Message Info & Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Message Information</h6>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Status:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-@(Model.Status switch
                            {
                                "New" => "primary",
                                "In Progress" => "warning",
                                "Resolved" => "success",
                                _ => "secondary"
                            })">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-5">Read:</dt>
                        <dd class="col-sm-7">
                            @if (Model.IsRead)
                            {
                                <text><i class="fas fa-check-circle text-success"></i> Yes</text>
                            }
                            else
                            {
                                <text><i class="fas fa-circle text-warning"></i> Unread</text>
                            }
                        </dd>

                        <dt class="col-sm-5">Submitted:</dt>
                        <dd class="col-sm-7">
                            @Model.CreatedDate.ToString("MMM dd, yyyy")<br />
                            <small class="text-muted">@Model.CreatedDate.ToString("hh:mm tt")</small>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.SourceIp))
                        {
                            <dt class="col-sm-5">IP Address:</dt>
                            <dd class="col-sm-7">
                                <code>@Model.SourceIp</code>
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.UserAgent))
                        {
                            <dt class="col-sm-5">User Agent:</dt>
                            <dd class="col-sm-7">
                                <small class="text-muted" style="word-break: break-all;">@Model.UserAgent</small>
                            </dd>
                        }
                    </dl>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Actions</h6>
                </div>
                <div class="card-body">
                    <!-- Update Status -->
                    <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="mb-3">
                        @Html.AntiForgeryToken()
                        <label class="form-label">Update Status</label>
                        <div class="input-group">
                            <select name="status" class="form-select">
                                <option value="New" selected="@(Model.Status == "New")">New</option>
                                <option value="In Progress" selected="@(Model.Status == "In Progress")">In Progress</option>
                                <option value="Resolved" selected="@(Model.Status == "Resolved")">Resolved</option>
                            </select>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>

                    <hr />

                    <!-- Mark Read/Unread -->
                    @if (Model.IsRead)
                    {
                        <form asp-action="MarkAsUnread" asp-route-id="@Model.Id" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-warning w-100">
                                <i class="fas fa-eye-slash me-2"></i>Mark as Unread
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="MarkAsRead" asp-route-id="@Model.Id" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-success w-100">
                                <i class="fas fa-check me-2"></i>Mark as Read
                            </button>
                        </form>
                    }

                    <!-- Delete -->
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                          onsubmit="return confirm('Are you sure you want to delete this message?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="fas fa-trash me-2"></i>Delete Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
