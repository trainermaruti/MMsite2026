@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8 col-lg-6 text-center">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <i class="fas fa-ban fa-5x text-danger mb-4"></i>
                        <h1 class="display-4 mb-3">Access Denied</h1>
                        <p class="lead text-muted mb-4">
                            You need administrator privileges to access this area.
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home"></i> Public Site
                            </a>
                            <a asp-area="Admin" asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                                <i class="fas fa-sign-in-alt"></i> Admin Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
