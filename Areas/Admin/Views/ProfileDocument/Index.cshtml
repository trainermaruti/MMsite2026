@model List<MarutiTrainingPortal.Models.ProfileDocument>

@{
    ViewData["Title"] = "Profile Document Management";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">ðŸ“„ Profile Document</h1>
        <a asp-action="Upload" class="btn btn-primary">
            <i class="fas fa-upload me-2"></i>Upload New Document
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-file-pdf me-2"></i>Manage Profile Documents
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-pdf fa-3x text-muted mb-3"></i>
                    <h5>No Profile Document Uploaded</h5>
                    <p class="text-muted">Upload a PDF document that visitors can download from your profile.</p>
                    <a asp-action="Upload" class="btn btn-primary">
                        <i class="fas fa-upload me-2"></i>Upload Document
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>File Name</th>
                                <th>Size</th>
                                <th>Downloads</th>
                                <th>Status</th>
                                <th>Public URL</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@doc.Title</strong>
                                        @if (!string.IsNullOrEmpty(doc.Description))
                                        {
                                            <br><small class="text-muted">@doc.Description</small>
                                        }
                                    </td>
                                    <td><code>@doc.FileName</code></td>
                                    <td>@doc.FileSizeFormatted</td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="fas fa-download me-1"></i>@doc.DownloadCount
                                        </span>
                                    </td>
                                    <td>
                                        @if (doc.IsEnabled)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Enabled
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times-circle me-1"></i>Disabled
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="input-group input-group-sm">
                                            <input type="text" class="form-control" value="@Url.Action("DownloadProfile", "Document", null, Context.Request.Scheme)" readonly>
                                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard(this)" title="Copy URL">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                        <small class="text-muted">https://yourdomain.com/profile.pdf</small>
                                    </td>
                                    <td>@doc.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@doc.FilePath" target="_blank" class="btn btn-info" title="Preview">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-warning" onclick="toggleDocument(@doc.Id)" title="@(doc.IsEnabled ? "Disable" : "Enable")">
                                                <i class="fas fa-@(doc.IsEnabled ? "toggle-on" : "toggle-off")"></i>
                                            </button>
                                            <button type="button" class="btn btn-danger" onclick="deleteDocument(@doc.Id)" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-info mt-3">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Tip:</strong> Only the most recent enabled document will be available for download at <code>/profile.pdf</code>
                </div>
            }
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow mt-4">
            <div class="card-header bg-secondary text-white">
                <i class="fas fa-link me-2"></i>Integration Instructions
            </div>
            <div class="card-body">
                <h6>Public Download URL:</h6>
                <div class="bg-dark text-light p-3 rounded mb-3">
                    <code class="text-warning">@Url.Action("DownloadProfile", "Document", null, Context.Request.Scheme)</code>
                </div>

                <h6>How to Use:</h6>
                <ul>
                    <li>Share this URL anywhere (email, LinkedIn, business cards)</li>
                    <li>Clean, professional URL: <code>https://yourdomain.com/profile.pdf</code></li>
                    <li>Clicking the link automatically downloads the PDF</li>
                    <li>Button already added to your homepage hero section</li>
                </ul>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyToClipboard(button) {
            const input = button.previousElementSibling;
            input.select();
            document.execCommand('copy');
            
            const originalHTML = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i>';
            setTimeout(() => {
                button.innerHTML = originalHTML;
            }, 2000);
        }

        function toggleDocument(id) {
            if (confirm('Are you sure you want to toggle this document status?')) {
                fetch(`/Admin/ProfileDocument/Toggle/${id}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    }
                });
            }
        }

        function deleteDocument(id) {
            if (confirm('Are you sure you want to delete this document? This action cannot be undone.')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/Admin/ProfileDocument/Delete/${id}`;
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    form.appendChild(token.cloneNode());
                }
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
