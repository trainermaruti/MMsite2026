@model MarutiTrainingPortal.Models.WebsiteImage

@{
    ViewData["Title"] = "Delete Website Image";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Delete Website Image</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this image?
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <img src="@Model.ImageUrl" alt="@Model.AltText" class="img-fluid" style="max-height: 400px; border-radius: 8px;" />
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Display Name</dt>
                        <dd class="col-sm-8">@Model.DisplayName</dd>

                        <dt class="col-sm-4">Image Key</dt>
                        <dd class="col-sm-8"><code>@Model.ImageKey</code></dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@(Model.Description ?? "N/A")</dd>

                        <dt class="col-sm-4">Alt Text</dt>
                        <dd class="col-sm-8">@(Model.AltText ?? "N/A")</dd>

                        <dt class="col-sm-4">Image URL</dt>
                        <dd class="col-sm-8"><small>@Model.ImageUrl</small></dd>

                        <dt class="col-sm-4">Created</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
