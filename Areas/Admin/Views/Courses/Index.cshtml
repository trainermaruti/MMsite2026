@model List<Course>

@{
    ViewData["Title"] = "Manage Courses";
    Layout = "_ModernAdminLayout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="background: var(--success-light); border: 1px solid var(--success); color: var(--success); border-radius: 12px; margin-bottom: 24px;">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Modern Page Header -->
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px; flex-wrap: wrap; gap: 16px;">
    <div>
        <h1 style="font-size: 32px; font-weight: 700; color: var(--text-primary); margin-bottom: 8px;">
            <i class="fas fa-video" style="color: var(--primary); margin-right: 12px;"></i>Manage Courses
        </h1>
        <p style="color: var(--text-secondary); font-size: 15px; margin: 0;">Create, edit, and manage all video courses</p>
    </div>
    <div style="display: flex; gap: 12px; flex-wrap: wrap; align-items: center;">
        <a asp-area="Admin" asp-controller="Courses" asp-action="Create" class="modern-btn modern-btn-primary" style="white-space: nowrap;">
            <i class="fas fa-plus me-2"></i>Add New Course
        </a>
        <a asp-area="Admin" asp-controller="Courses" asp-action="ImportPreview" class="modern-btn modern-btn-secondary" style="white-space: nowrap;">
            <i class="fas fa-download me-2"></i>Import from SkillTech
        </a>
        <button type="button" onclick="importFromJson()" class="btn btn-info" style="white-space: nowrap;">
            <i class="fas fa-file-import me-2"></i>Import from JSON
        </button>
        <button type="button" onclick="syncToJson()" class="modern-btn" style="white-space: nowrap; min-width: auto; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border: none; box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);">
            <i class="fas fa-sync-alt me-2"></i>Sync to JSON
        </button>
    </div>
</div>

<!-- Search Bar -->
<div class="modern-card" style="margin-bottom: 24px; padding: 20px;">
    <form method="get" asp-area="Admin" asp-controller="Courses" asp-action="Index" id="searchForm">
        <div style="display: flex; gap: 12px; align-items: center;">
            <div style="flex: 1;">
                <input type="text" name="q" id="searchInput" class="form-control" placeholder="Search courses by title, category, or level..." style="background: var(--bg-secondary); border: 1px solid var(--border-color); color: var(--text-primary); border-radius: 8px; padding: 10px 16px;" />
            </div>
            <button type="submit" class="modern-btn modern-btn-primary">
                <i class="fas fa-search"></i> Search
            </button>
        </div>
    </form>
</div>

@if (Model == null || Model.Count == 0)
{
    <div style="background: var(--bg-secondary); border: 1px solid var(--border-color); border-radius: 12px; padding: 48px; text-align: center;">
        <i class="fas fa-graduation-cap" style="font-size: 64px; color: var(--text-muted); margin-bottom: 16px;"></i>
        <h3 style="color: var(--text-secondary); margin-bottom: 8px;">No courses found</h3>
        <p style="color: var(--text-muted); margin-bottom: 24px;">Get started by creating your first course.</p>
        <a asp-area="Admin" asp-controller="Courses" asp-action="Create" class="modern-btn modern-btn-primary">
            <i class="fas fa-plus me-2"></i>Add First Course
        </a>
    </div>
}
else
{
        <div class="modern-table-container">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th>TITLE</th>
                        <th>CATEGORY</th>
                        <th>LEVEL</th>
                        <th>DURATION</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody id="coursesTable">
                    @foreach (var course in Model)
                    {
                        var totalSeconds = course.DurationSeconds > 0 ? course.DurationSeconds : (course.DurationMinutes * 60);
                        var hours = totalSeconds / 3600;
                        var minutes = (totalSeconds % 3600) / 60;
                        var seconds = totalSeconds % 60;
                        var durationFormatted = $"{hours:D2}:{minutes:D2}:{seconds:D2}";
                        
                        <tr>
                            <td><strong style="color: var(--text-primary);">@course.Title</strong></td>
                            <td>@course.Category</td>
                            <td>@course.Level</td>
                            <td>@durationFormatted</td>
                            <td>
                                <div style="display: flex; gap: 8px;">
                                    <a asp-area="Admin" asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="modern-btn modern-btn-ghost" style="padding: 6px 12px; font-size: 13px;">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-area="Admin" asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="modern-btn" style="padding: 6px 12px; font-size: 13px; background: var(--error); color: white;" onclick="return confirm('Are you sure you want to delete this course?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 3 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 3000);
            });
        });

        // Sync to JSON function
        async function syncToJson() {
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');
            const originalText = btn.innerHTML;
            
            // Show loading state
            icon.classList.add('fa-spin');
            btn.disabled = true;
            
            try {
                const response = await fetch('/Courses/SyncToJson', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });
                
                if (response.ok) {
                    // Show success message
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-success alert-dismissible fade show';
                    alertDiv.style.cssText = 'background: var(--success-light); border: 1px solid var(--success); color: var(--success); border-radius: 12px; margin-bottom: 24px;';
                    alertDiv.innerHTML = '<i class="fas fa-check-circle me-2"></i>Successfully synced all courses to JSON file!<button type="button" class="btn-close" data-bs-dismiss="alert"></button>';
                    document.querySelector('.modern-card').insertAdjacentElement('beforebegin', alertDiv);
                    
                    // Auto-dismiss after 3 seconds
                    setTimeout(() => {
                        const bsAlert = new bootstrap.Alert(alertDiv);
                        bsAlert.close();
                    }, 3000);
                } else {
                    throw new Error('Sync failed');
                }
            } catch (error) {
                // Show error message
                const alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-danger alert-dismissible fade show';
                alertDiv.style.cssText = 'background: #fee; border: 1px solid #f00; color: #c00; border-radius: 12px; margin-bottom: 24px;';
                alertDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Error syncing to JSON file.<button type="button" class="btn-close" data-bs-dismiss="alert"></button>';
                document.querySelector('.modern-card').insertAdjacentElement('beforebegin', alertDiv);
            } finally {
                // Reset button state
                icon.classList.remove('fa-spin');
                btn.disabled = false;
            }
        }

        // Import from JSON function
        async function importFromJson() {
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');
            
            icon.classList.add('fa-spin');
            btn.disabled = true;
            
            try {
                const response = await fetch('@Url.Action("ImportFromJson", "Courses", new { area = "Admin" })', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });
                
                if (response.ok) {
                    location.reload();
                } else {
                    throw new Error('Import failed');
                }
            } catch (error) {
                const alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-danger alert-dismissible fade show';
                alertDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Error importing from JSON file.<button type="button" class="btn-close" data-bs-dismiss="alert"></button>';
                document.querySelector('.modern-card').insertAdjacentElement('beforebegin', alertDiv);
                icon.classList.remove('fa-spin');
                btn.disabled = false;
            }
        }

        // Search functionality - form based search
    </script>
}