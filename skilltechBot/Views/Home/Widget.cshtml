@{
    ViewData["Title"] = "SkillTech Navigator Widget";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/Favicon.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/chat-widget.css">
</head>
<body>
    <!-- Floating Chat Widget Container -->
    <div class="chat-widget-container" id="chatWidgetContainer">
        
        <!-- Chat Popup Window -->
        <div class="chat-popup" id="chatPopup">
            <div class="chat-window">
                
                <!-- Header with Close Button -->
                <div class="chat-header">
                    <div class="header-title">
                        <div class="bot-avatar-small">ST</div>
                        <div class="header-info">
                            <h3>SkillTech Navigator</h3>
                            <div class="status-line">
                                <span class="status-dot"></span>
                                <span>Online</span>
                            </div>
                        </div>
                    </div>
                    <button class="close-btn" id="closeBtn" aria-label="Close chat">Ã—</button>
                </div>

                <!-- Message Area -->
                <div class="chat-messages" id="chatMessages">
                    <div class="welcome-screen" id="welcomeScreen">
                        <img src="/images/skilltech-logo.png" alt="SkillTech Logo" class="welcome-logo" />
                        <h2>Plan your Azure journey with clarity.</h2>
                        <p>
                            Get guidance on certifications, learning paths, and next career steps.
                        </p>
                        <div class="quick-actions">
                            <button class="quick-action-btn" onclick="sendQuickMessage('I am new to Azure and Cloud')">
                                I'm new to Azure & Cloud
                            </button>
                            <button class="quick-action-btn" onclick="sendQuickMessage('Help me choose a certification')">
                                Help me choose a certification
                            </button>
                            <button class="quick-action-btn" onclick="sendQuickMessage('View pricing and plans')">
                                View pricing & plans
                            </button>
                        </div>
                    </div>

                    <div class="typing-indicator" id="typingIndicator">
                        <div class="message-avatar">ST</div>
                        <div class="typing-dots">
                            <div class="typing-dot"></div>
                            <div class="typing-dot"></div>
                            <div class="typing-dot"></div>
                        </div>
                    </div>
                </div>

                <!-- Input Area -->
                <div class="chat-input-area">
                    <div class="chat-input-container">
                        <input 
                            type="text" 
                            class="chat-input" 
                            id="messageInput" 
                            placeholder="Ask about courses, certifications, or pricin"
                            autocomplete="off"
                        />
                        <button class="send-btn" id="sendBtn" onclick="sendMessage()">
                            âž¤
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Floating Launcher Button -->
        <button class="chat-launcher" id="chatLauncher" aria-label="Open SkillTech Chat">
            <span class="launcher-icon open-icon">ðŸ’¬</span>
            <span class="launcher-icon close-icon">âœ•</span>
        </button>
    </div>

    <script src="~/js/chat-widget.js"></script>
</body>
</html>
